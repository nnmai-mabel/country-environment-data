@*@model IEnumerable<Assig1.Models.City>*@
@model Assig1.ViewModels.CitiesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<form method="post" asp-controller="Cities" asp-action="Index" asp-route-countryId="@Model.CountryId" class="row mb-2">
    <div class="col-4">
        @*<input asp-for="@Model.SearchText" class="form-control" maxlength="100" type="text" placeholder="Search Cities" title="Search a city name" />*@
        <input type="text" list="cityList" class="form-control" maxlength="100" id="cityName" asp-for="@Model.SearchText" placeholder="Search cities" title="Search a city name"/>
        <datalist id="cityList">
            @foreach (var city in Model.CityDetailList)
            {
                <option value="@city.TheCity.CityName"></option>
            }
        </datalist>
        @*<input type="hidden" id="searchText" asp-for="@Model.SearchText">*@
    </div>
    <div class="col-4">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<div>
    <a asp-controller="Countries" asp-action="Index" asp-route-regionId="@Model.RegionId" class="btn btn-outline-success">Go Back</a>
    @*<a asp-controller="Countries" asp-action="Index" asp-route-regionId="@Model.RegionId" class="btn btn-outline-success">Go Back</a>*@
</div>
<div>
    @if (Model.TheCityDetail != null)
    {
        <p>Region Name: @Model.TheCityDetail.TheRegion.RegionName</p>
    }
    else
    {
        <p>No region</p>
    }
    @if (Model.TheCityDetail != null)
    {
        <p>Country Name: @Model.TheCityDetail.TheCountry.CountryName</p>
        <p>Image: </p>
        <img src="@Model.TheCityDetail.TheCountry.ImageUrl" class="card-img-top" alt="...">
    }
    else
    {
        <p>No country</p>
    }
    @*@if(Model.TheCityDetail != null)
        {
                    <p>Country Name: @Model.TheCityDetail.TheCountry.CountryName</p>
        }*@


</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.CityName)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Country)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CityDetailList)
        {
            <tr>
                <td>
                    CityId: @Html.DisplayFor(modelItem => item.TheCity.CityId)
                </td>
                <td>
                    City Name: @Html.DisplayFor(modelItem => item.TheCity.CityName)
                </td>
                <td>
                    Country Name: @Html.DisplayFor(modelItem => item.TheCity.Country.CountryName)
                </td>
                <td>
                    Air Min Year: @Html.DisplayFor(modelItem => item.AirMinYear)
                </td>
                <td>
                    Air Max Year: @Html.DisplayFor(modelItem => item.AirMaxYear)
                </td>
                <td>
                    Air Record Count: @Html.DisplayFor(modelItem => item.AirRecordCount)
                </td>
                <td>
                    <a asp-action="Details" asp-route-cityId="@item.TheCity.CityId" asp-route-searchText="@Model.SearchText" class="btn btn-outline-primary">Details [Air Quality Data]</a>
                </td>
                <td>
                    @*Air Min:@Html.DisplayFor(modelItem => item.mi)*@
                </td>
                <td>
                    @*CountryId: @Html.DisplayFor(modelItem => item.)*@
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.TheCity.CityId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.TheCity.CityId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.TheCity.CityId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
