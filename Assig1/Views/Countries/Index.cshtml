@model IEnumerable<Assig1.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="alert-secondary p-2 text-center mb-3">Index</h1>
</div>

<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-3 m-1">
            <div class="card" style="width: 20rem;">
                <div class="card-body justify-content-around">
                    <h5 class="card-title justify-content-center mb-3">@item.CountryName</h5>
                </div>
            </div>
        </div>
    }
</div>
