@model Assig1.ViewModels.CountriesViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="alert-secondary p-2 text-center mb-3">Index</h1>
    <a asp-controller="Regions" asp-action="Index" class="btn btn-outline-success">Visit all regions</a>
</div>

<form method="post" asp-controller="Countries" asp-action="Index" class="row mb-2">
    <div class="col-4">
        <input asp-for="@Model.SearchText" class="form-control" maxlength="100" type="text" placeholder="Search Countries" title="Search a country name" />
    </div>

    <div class="col-3">
        <select asp-for="@Model.RegionId" asp-items="@Model.RegionSelectList" class="form-control" title="View countries for a specific region">
            <option value="">All Regions</option>
        </select>
    </div>

    <div class="col-4">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="row justify-content-center">
    @if (Model.CountryList.Count() > 0)
    {
        <div class="row justify-content-center" align="center" role="alert">
            <div class="alert alert-success" role="alert">
                There are @Model.CountryList.Count() countries in region @Model.RegionId.
            </div>
        </div>
    }
    @foreach (var item in Model.CountryList)
    {
        <div class="col-3 m-1">
            <div class="card" style="width: 20rem;">
                <img src="@item.TheCountry.ImageUrl" class="card-img-top" style="height: 12rem;" alt="@item.TheCountry.CountryName" />
                <div class="card-body justify-content-around">
                    <h5 class="card-title justify-content-center mb-3">@item.TheCountry.CountryName</h5>
                    <p class="card-text">
                        CountryID: @item.TheCountry.CountryId
                    </p>
                    @if (item.TheCountry.Region != null)
                    {
                        <p>Region: @item.TheCountry.Region.RegionName</p>
                        @*<a asp-action="Index" asp-route-countryId="@Model.TheCountryDetail.TheCountry.CountryId" asp-route-regionId="@Model.TheCountryDetail.TheRegion.RegionId" class="btn btn-outline-info">Countries List in same region</a>*@
                    }
                    else
                    {
                        <p>Region: no regions</p>
                        @*<a asp-action="Index" asp-route-countryId="" class="btn btn-outline-info">All Countries List</a>*@
                    }

                    @*ISO3: @item.TheCountry.Iso3
                    Temperature: @item.TheCountry.TemperatureData*@

                <div class="d-flex justify-content-around">
                    @*May need to fix the link below later*@
                    @*<a asp-controller="Cities" asp-action="Index" asp-route-countryId="@item.TheCountry.CountryId" asp-route-regionId="@item.TheCountry.RegionId" class="btn btn-outline-success">Visit cities</a>*@
                    <a asp-controller="Cities" asp-action="Index" asp-route-countryId="@item.TheCountry.CountryId" class="btn btn-outline-success">Visit cities</a>
                    <a asp-action="Details" asp-route-countryId="@item.TheCountry.CountryId" class="btn btn-outline-info">Details</a>
                </div>

                </div>
            </div>
        </div>
    }
</div>
